<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RideTracker"
             xmlns:utilities="clr-namespace:RideTracker.Utilities"
             UserAppTheme="Light"
             x:Class="RideTracker.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
                <ResourceDictionary>
                    <utilities:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
                </ResourceDictionary>
                <ResourceDictionary>
                    <Style x:Key="ErrorMessage" TargetType="Label">
                        <Setter Property="TextColor" Value="Red" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="FontAttributes" Value="Bold" />
                        <Setter Property="HorizontalOptions" Value="Start" />
                        <Setter Property="VerticalOptions" Value="Center" />
                        <Setter Property="Margin" Value="5,0,0,0" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
